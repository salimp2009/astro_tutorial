---
const { title, url, date } = Astro.props;

let newdate = new Date(Date.parse(date));
let dateString = newdate.toLocaleDateString("en-US", {
  year: "numeric",
  month: "2-digit",
  day: "2-digit",
});
---

<li>
  <a href={url}>
    <div class="container">
      <span class="pubDate">{dateString}</span>
      <span>{title}</span>
      <span class="readmore">Read More</span>
    </div>
  </a>
</li>

<style>
  a {
    color: #c1caf4;
  }
  a:focus {
    background-color: black;
  }
  .pubDate {
    color: #aaa;
    font-size: 1rem;
    font-weight: 400;
    margin-right: 0.8em;
  }
  .readmore {
    color: #aaa;
    /* text-align: right; */
    font-size: 1rem;
    font-weight: 400;
    margin-left: auto;
  }
  .container {
    display: flex;
    /* align-items: center; */
    /* justify-content: space-between; */
  }
</style>
