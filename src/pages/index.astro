---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPosts from "../components/BlogPosts.astro";
import { YouTube } from "@astro-community/astro-embed-youtube";
const pageTitle = "Salim Pamukcu";

const message =
  "I am a self learner programmer C++, Rust, Haskell. Now learning Astro, linux, Arch..anything fun";
---

<BaseLayout pageTitle={pageTitle} message={message} showImage="true">
  <h2>Posts</h2>
  <BlogPosts />

  <h2>Videos</h2>
  <div class="video yt-video">
    <YouTube id="https://www.youtube.com/watch?v=6OSDh8BS5Nk" />
  </div>
</BaseLayout>

<style lang="css">
  .video lite-youtube {
    /* center */
    margin-inline: auto; /* full width */
    width: 100%;
    max-width: 100%;
    aspect-ratio: 16/9;
    height: auto;
    padding-top: 1rem;
  }
</style>
